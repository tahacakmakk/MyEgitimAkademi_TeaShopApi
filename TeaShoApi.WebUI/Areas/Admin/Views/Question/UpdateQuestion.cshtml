@model UpadateQuestionDto
@{
    ViewData["Title"] = "UpdateQuestion";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<h2> Soru Cevap Düzenleme</h2>
<form method="post">
    <div class="card p-5">
        <input type="hidden" asp-for="QuestionID" />
        <label>Soru</label>
        <input type="text" asp-for="QuestionDetail" class="form-control" />
        <br />
        <label>Cevap</label>
        <input type="text" asp-for="AnswerDetail" class="form-control" />
        <br />
        <button class="btn btn-primary">Güncelle</button>
    </div>

</form>
